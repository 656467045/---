/* miniprogram/pages/end10/end10.wxss */
view{
  background-image: url(https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1600602117086&di=8cbeb453c1a9ffad915648511cd003d4&imgtype=0&src=http%3A%2F%2Fimgsrc.baidu.com%2Fforum%2Fw%3D580%2Fsign%3D8c2fe96bfffaaf5184e381b7bc5594ed%2F61c8556034a85edfcf85bf6e4b540923dc54756f.jpg);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  text-align: center;
  width: 95vw;
  height: 95vh;
  border: chocolate 5px solid;
  box-shadow: 0px 0px 15px 5px #b8e994 inset;
}
view text:nth-child(1){
  font-size: 4rem;
  color: #e55039;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
}
view text:nth-child(2){
  margin-left: 3rem;
  width: 70%;
  font-size: 1rem;
  color: #b71540;
}
view text:nth-child(2)::after{
  width: 0.1875rem;
	height: 0.1875rem;
  animation-name: loading;
  animation-duration: 1s;
  animation-iteration-count: infinite;
}
@keyframes loading{
  from{
    box-shadow: none;
  }
  30%{
    box-shadow: 3px 0px 0 currentcolor;
  }
  60%{
    box-shadow: 3px 0px 0 currentcolor,9px 0 0 currentcolor;
  }
  90%{
    box-shadow: 3px 0px 0 currentcolor,9px 0 0 currentcolor,15px 0 0 currentcolor;
  }
}
