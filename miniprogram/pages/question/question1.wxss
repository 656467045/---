/* miniprogram/pages/question/question1.wxss */
#backgroundscenery{
  position: absolute;
  background-image: url(https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1600276157266&di=4ebfb7d29d22bfaed3158c7099e23d65&imgtype=0&src=http%3A%2F%2Fc-ssl.duitang.com%2Fuploads%2Fitem%2F201609%2F15%2F20160915092749_aLwFV.jpeg);
  background-size: cover;
  background-position: center;
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
#questionbox{
  display: block;
  position: relative;
  width: 85%;
  height: 45%;
  border: #e55039 solid 0.5rem;
  box-shadow:10px 10px 5px -5px #e84118 ;
  color:#e55039;
  text-align: center;
  font-style: italic;
  font-size: 1.5rem;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}
.anws{
  border-radius: 20%;
  box-shadow:0px 0px 5px 5px #ffffff inset;
  /* padding-top: 1rem; */
  text-align: center;
  color: #ff9f1a;
  line-height: 4rem;
  /* text-align: left; */
  font-style: initial;
  font-weight: 2rem;
  font-size: 2rem;
  font-family: monospace;
  height: 10%;
  width: 85%;
  display: block;
  border: tan solid 0.5rem;
}
.becheck{
  animation-name: becheck;
  animation-duration: 2s;
  animation-fill-mode: forwards;
  transition: ease;
}
#questionbox text:nth-child(1){
  font-size: 2rem;
  text-shadow: 2px 2px 5px #ffffff;
}
#questionbox text:nth-child(2){
  color: #ff9f1a;
  display: block;
  text-indent: 2em;
  text-align: left;
}
@keyframes becheck{
  from{
    transform: rotate(0deg);
  }
  30%{
    transform: rotate(0deg) scale(1.2);
  }
  to{
    transform: rotate(720deg) scale(0);
  }
}